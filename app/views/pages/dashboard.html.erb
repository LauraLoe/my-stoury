
  <h3 class="mt-5">My tours</h3>

  <%# <a class="btn btn-ghost mt-2 mb-4" href="tour/new">Add a new tour</a> %>
  <%= link_to new_tour_path do %>
  <i class="fa-solid fa-plus" class="properlink"></i>
  <% end %>


  <div class="tour-cards-container">
    <% @tours.each do |tour| %>
    <a href="../tours/<%= tour.id%>" >
        <div class="card-tour" >
          <%= cl_image_tag tour.photo.key, class:"card-tour-img" %>

          <div class="card-tour-text">
            <h3><%= tour.name %></h3>
            <p><%= tour.description %></p>
            <div class="card-tour-buttons">
              <%= link_to edit_tour_path(tour), class: "card-tour-button" do %>
                <i class="fa-solid fa-pen"></i>
              <% end %>
              <%= link_to tour_path(tour), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{tour.name} from your tours?"}, class: "card-tour-button" do %>
                <i class="fa-sharp fa-solid fa-circle-xmark"></i>
              <% end %>
            </div>
          </div>



        </div>
    </a>
    <% end %>
  </div>
