<%# this partial is for map testing %>
<h2><%= site.name %></h2>
<p><%= site.address %></p>
<%= link_to site_path(site), class: "info-btn" do %>
  <i class="fa-solid fa-eye"></i>
<% end %>
<%= link_to new_site_note_path(site), class: "info-btn" do %>
  <i class="fa-solid fa-plus" class="properlink"></i>
<% end %>
<%= link_to site_path(site), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{site.name} from your tours?"}, class: "info-btn" do %>
  <i class="fa-sharp fa-solid fa-circle-xmark"></i>
<% end %>
