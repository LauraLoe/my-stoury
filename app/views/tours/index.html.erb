<h3 class="mt-5">All tours</h3>

<%# <a class="btn btn-ghost mt-2 mb-4" href="tour/new">Add a new tour</a> %>
<%= link_to "Add a new tour", new_tour_path, class: "btn btn-ghost mt-2 mb-4" %>


<div class="cards mt-10">
  <% @tours.each do |tour| %>
    <a href="../tours/<%= tour.id%>" class='properlink'>
      <div class="card-trip">
        <%= cl_image_tag tour.photo.key, height: 300, width: 400, crop: :fill, class:"img-gray-scale" %>
        <div class="card-trip-infos">
          <div>
            <h2><%= tour.name %></h2>
            <p><%= tour.description %></p>
          </div>
          <div class="card-body">
            <%= link_to "Edit my tour", edit_tour_path(tour), class: "card-link properlink" %>
            <%= link_to "Delete this tour", tour_path(tour), class: "card-link properlink", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{tour.name} from your tours?"} %>


          </div>
        </div>
      </div>
    </a>
  <% end %>
</div>
