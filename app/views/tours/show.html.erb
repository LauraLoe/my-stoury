<div class="container-fluid tour-container">

  <div class="tour-texts">
    <h3><%= @tour.name %></h3>
    <p><%= @tour.description %></p>
  </div>

  <div class="add-container mx-2">

      <div class="sites-container">
        <% @tour.sites.each do |site| %>
          <div class="site-card">
          <h4><%= site.name %></h4>
          <p><%= site.address %></p>
          </div>
        <% end %>
      </div>



      <div data-controller="map" data-map-markers-value="<%= @markers.to_json %>"></div>
      <div id="map" style="width: 100%; height: 800px;" ></div>

      <%= render "sites/form" %>

  </div>




</div>

